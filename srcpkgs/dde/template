pkgname=dde
version=0.1
revision=1
makedepends="libXinerama-devel libXft-devel freetype-devel libXrandr-devel"
short_desc="Desktop environment built around suckless programs and other minimalist stuff"
maintainer="Toasterbirb <git@toasterbirb.com>"
license="GPLv3"
homepage="https://github.com/Toasterbirb/dde"
distfiles="https://github.com/Toasterbirb/dde/releases/download/0.1/dde.tar.gz"
checksum=3b3eb32423749c05a21cb8a5a7a35e6a6791ec9a68d4fbe2fff8b5ba34fa7b81
wrksrc=${pkgname}

do_build() {
	# dwm
	cd dwm
	make
	cd ..

	# dmenu
	cd dmenu
	make
	cd ..

	# dwmblocks
	cd dwmblocks
	make
	cd ..

	# slock
	cd slock
	make
	cd ..
}

do_install() {
	# dwm
	cd dwm
	make PREFIX=/usr DESTDIR=$DESTDIR install
	cd ..

	# dmenu
	cd dmenu
	make PREFIX=/usr DESTDIR=$DESTDIR install
	cd ..

	# dwmblocks
	cd dwmblocks
	make PREFIX=/usr DESTDIR=$DESTDIR install
	cd ..

	# slock
	cd slock
	make PREFIX=/usr DESTDIR=$DESTDIR install
	cd ..
}
